---
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.tsx';
import {NavBar} from "@/components/ui/NavBar.tsx"
import { Home, User, Briefcase, FileText, Mail } from 'lucide-react';

const navItems = [
    { name: 'About', url: '#', icon: 'Home' },
    { name: 'Blogs', url: '#', icon: 'User' },
    { name: 'Projects', url: '#', icon: 'Briefcase' },
    { name: 'Contact', url: '#', icon: 'Mail' },
     ]
---
<header class="container mx-auto">
   <div class="flex items-center justify-between">
    
    <!-- Empty div or logo (optional left-aligned content) -->
    <div class="w-1/3"></div>

    <!-- Centered NavBar -->
    <div class="mx-auto">
      <NavBar items={navItems} client:only />
    </div>

    <!-- Right-aligned ThemeIcon -->
    <div class="w-1/3 flex justify-end">
      <div class="flex items-center gap-3 bg-background/5 border border-border backdrop-blur-lg py-1 px-1 rounded-full shadow-lg">
      <ThemeIcon client:only />

      </div>
    </div>

   </div>
</header>
